@model IEnumerable<StudentRecordApp.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<h2 class="text-center my-4 animate__animated animate__fadeInDown">@ViewData["Title"]</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-success shadow px-4 py-2 animate__animated animate__fadeInRight">
        ➕ Add New Student
    </a>
</div>

<table class="table table-bordered table-hover shadow-lg rounded animate__animated animate__fadeInUp">
    <thead class="table-dark text-center">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.RollNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Course)</th>
            <th>@Html.DisplayNameFor(model => model.Semester)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td class="name-column">@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.RollNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Course)</td>
                <td>@Html.DisplayFor(modelItem => item.Semester)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">✏️ Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">📋 Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑 Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
